<% include node_modules/oae-email/emailTemplates/footer.txt.jst %>
<%
    var greeting = util.i18n.translate('__MSG__ACTIVITY_EMAIL_GREETING__', {'displayName': util.html.encodeForHTML(recipient.displayName)});

    var deletedElement = util.i18n.translate('EMAIL_DELETED_ELEMENT_BODY_EXPLANATION', {'userDeleted': util.html.encodeForHTML(userDeleted.displayName), 'resourceName': util.html.encodeForHTML(resource.displayName), 'resourceType': util.html.encodeForHTML(resource.resourceType)});

    var promotedElement = util.i18n.translate('EMAIL_PROMOTED_ELEMENT_BODY_EXPLANATION', {'userDeleted': util.html.encodeForHTML(userDeleted.displayName), 'resourceName': util.html.encodeForHTML(resource.displayName), 'resourceType': util.html.encodeForHTML(resource.resourceType)});


    greeting = util.html.toText(greeting, false);
	promotedElement = util.html.toText(promotedElement, false);
	deletedElement = util.html.toText(deletedElement, false);
%>

<%= greeting %>

<% if (deleted) { %>
	<%= deletedElement %>
<% } else { %>
	<%= promotedElement %>
<% } %>
<%= resource.profilePath %>
<%
renderFooter(false);
%>
