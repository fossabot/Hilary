<% include node_modules/oae-email/emailTemplates/header.html.jst %>
<% include node_modules/oae-email/emailTemplates/footer.html.jst %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http: //www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http: //www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width" />
        <style>
            /**
             * Include the general styles
             */
            <% include node_modules/oae-email/emailTemplates/email.css.jst %>
            
            <% 

                var accessElement = util.i18n.translate('__MSG__ACCESS_TO_ELEMENT__', {'resourceName': util.html.encodeForHTML(resource.displayName)});  

                var deleteContent = util.i18n.translate('__MSG__EMAIL_DELETED_ELEMENT_BODY_EXPLANATION__', {'resourceName': util.html.encodeForHTML(resource.displayName), 'resourceType': util.html.encodeForHTML(resource.resourceType), 'userDeleted': util.html.encodeForHTML(userDeleted.displayName), 'nbMonth': util.html.encodeForHTML(month)}); 

                var promoteContent = util.i18n.translate('__MSG__EMAIL_PROMOTED_ELEMENT_BODY_EXPLANATION__', {'resourceName': util.html.encodeForHTML(resource.displayName), 'resourceType': util.html.encodeForHTML(resource.resourceType), 'userDeleted': util.html.encodeForHTML(userDeleted.displayName)});  

                accessElement = util.html.toText(accessElement, false);
                promoteContent = util.html.toText(promoteContent, false);
                deleteContent = util.html.toText(deleteContent, false);

            %>

            .content td {
                background-color: #FFF;
                color: #888;
                padding: 20px;
            }
        </style>
    </head>
    <body>
        <table cellspacing="10" cellpadding="0">
            <tbody>
                <% renderHeader(); %>

                <tr class="row">
                    <td class="btn-prominent">
                        <a href="<%= resource.profilePath %>">
                            <%= accessElement %> 
                        </a>
                    </td>
                </tr>

                <tr class="row content">
                    <td>
                        <p>
                            <% if (deleted) { %>
                                <%= deleteContent %> 
                            <% } else { %>
                                <%= promoteContent %> 
                            <% } %>
                        </p>
                    </td>
                </tr>
                <% renderFooter(false); %>
            </tbody>
        </table>
    </body>
</html>
